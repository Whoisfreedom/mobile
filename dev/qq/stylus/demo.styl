@keyframes change{
	0%{top:0rem;}
	20%{top:-1.3rem;}
	50%{top:-1.3rem;}
	70%{top:-2.6rem}
}
html
	body
		header
			height 2.3rem
			width 16rem
			lien-height 2.2rem
			background-color rgb(250,250,250)
			background-image url(../../../img/top.png)
			border-bottom .1rem solid rgb(49,126,203)
			background-size cover
			>img
				height 1.5rem
				width 6rem
				margin-top .35rem
				margin-left .5rem
			>a
				height 1.1rem
				display inline-block
				width 1.4rem
				float right
				margin-top .6rem
				margin-right .5rem
				background-image url(../../../img/right.png)
				background-repeat no-repeat
				background-size cover
		.nav-top
			height 5rem
			width 16rem
			background-color rgb(73,152,231)
			padding .1rem 0
			display none
			>a
				display inline-block
				width 3.2rem 
				height 1.6rem 
				font-size .9rem
				color white	
				padding .35rem
				text-align center
				float left
				
		.nav
			height 2rem
			background-color rgb(62,134,206)
			>a
				font-size .9rem
				color white			
				padding .3rem .75rem
				margin-top .25rem
				float left 
				display inline-block
				&.current
					background-color rgb(34,111,187)
		.banner
			width 16rem
			height 8.25rem
			background-image url(../../../img/banner.png)
			background-size cover
		.gold
			width 15.3rem
			height 2.9rem
			margin .25rem auto
			.jiayou
				width 15.3rem
				height 1.25rem
				background-image url(../../../img/jiayou.png)
				background-size cover
				>span
					color rgb(0,106,206)
					font-size .7rem
					padding-left .4rem
					font-weight bold
			.paiming
				width 15.3rem 
				height 1.65rem
				overflow hidden
				position relative
				ul
					position absolute
					height 1.2rem
					animation change 6s infinite 
					li 
						font-size .7rem
						>div
							float left
							margin-top .5rem
							height .8rem
							border-right .05rem solid rgb(220,220,220)
							text-align center
							lien-height .8rem
							&:nth-of-type(1)
								width 1.8rem
								span
									padding .05rem .2rem
									border-radius .2rem
									background-color rgb(255,131,39)
									color white
							&:nth-of-type(2)
								width 4rem
							&:nth-of-type(3)
								width 2.4rem
								img
									display inline-block
									vertical-align middle
									margin-bottom .2rem
							&:nth-of-type(4)
								width 2.4rem
								img
									display inline-block
									vertical-align middle
									margin-bottom .2rem
							&:nth-of-type(5)
								width 2.4rem
								img
									display inline-block
									vertical-align middle
									margin-bottom .2rem
							&:nth-of-type(6)
								width 2.2rem
								border-right-width 0rem
		.quanming
			width 15.3rem 
			height 1.8rem
			margin .25rem auto
			background-color rgb(237,250,255)
			border .05rem solid rgb(181,220,242)
			>img
				width 2.2rem
				height 1.7rem
				display inline-block
				float left
				margin-left 1rem
			>a
				color rgb(6,149,215)
				font-size .7rem
				padding-left .4rem
				font-weight bold
				display inline-block
				float left
				margin-top .5rem
		.neirong
			height 4.15rem
			width 15.3rem
			margin .25rem auto
			border-bottom .05rem solid rgb(237,239,241)
			>img
				width 4rem
				height 3rem
				padding .05rem .15rem
				border .05rem solid rgb(224,224,224)
				margin-top .4rem
				display inline-block
				float left
			.word
				display inline-block
				width 11rem
				height 3rem
				float left
				margin-top .6rem
				margin-left .2rem
				h2
					font-size .75rem
					overflow hidden
					white-space nowrap
					text-overflow ellipsis
					line-height 1rem
				p
					font-size .6rem
					color rgb(135,140,146)
					line-height .9rem